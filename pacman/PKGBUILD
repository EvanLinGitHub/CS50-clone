arch=('x86_64' 'i686')
depends=()
license=('BSD')
makedepends=('git')
md5sums=(SKIP)
optdepends=()
pkgdesc="CS50 Library for C"
pkgname=libcs50-git
pkgrel=1
pkgver=r16.3a50671
provides=("libcs50")
source=(git+https://github.com/cs50/c.git)

build(){
    cd "$srcdir/c"
    make lib
}

package() {
    cd "$srcdir/c"
    install -Dm0644     lib/libcs50.so  "$pkgdir/usr/lib/libcs50.so"
    install -Dm0644     src/cs50.h      "$pkgdir/usr/include/cs50.h"
    install -Dm0644     src/cs50.c      "$pkgdir/usr/src/cs50.c"
}

pkgver() {
  cd "$srcdir/c"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
